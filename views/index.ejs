<div class="container">
  <% if(showButton) { %>
  <h1 class="text-center">The Original 151 Pokemon</h1>
  <% } %>
  <p id="favList">
    <a href="/pokemon">Favorites List</a>
  </p>
 


 

  <% pokemon.forEach(function(pokemon) { %>
    <div class="well">
        <h2><%= pokemon.name %></h2>
      <% if(showButton) { %>
        <form method="POST" action="/pokemon">
          <input hidden type="text" name="name" value="<%= pokemon.name %>">
          <button class="btn btn-primary" id="button" type="submit">Add to Favorite Pokemon</button>
        </form>
      <% } %>

      
      <form method="POST" action="/pokemon/<%=pokemon.id%>/?_method=DELETE">
        <input id="delete" type="submit" value="Delete">
        </form>
    </div>
    <p> <%pokemon.id%> </p>
  <% }); %>
</div>




